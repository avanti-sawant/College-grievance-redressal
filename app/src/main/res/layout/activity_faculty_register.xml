<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.college.faculty.FacultyRegister">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/faculty" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="Faculty Register"
                android:textColor="#303F9F"
                android:textSize="20sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:textSize="16sp"
                android:hint="Name"
                android:background="@drawable/editbg"
                android:drawableRight="@drawable/ic_person"
                android:drawableTint="@color/purple_500"
                android:textColor="#333" />
            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                android:background="@drawable/editbg"
                android:hint="Email"
                android:drawableRight="@drawable/ic_email"
                android:drawableTint="@color/purple_500"
                android:textColor="#333" />
            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:inputType="phone"
                android:background="@drawable/editbg"
                android:textSize="16sp"
                android:hint="Phone Number"
                android:drawableRight="@drawable/ic_phone"
                android:drawableTint="@color/purple_500"
                android:maxLength="10"
                android:textColor="#333" />
            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:background="@drawable/editbg"
                android:hint="Password"
                android:drawableRight="@drawable/ic_lock"
                android:drawableTint="@color/purple_500"
                android:textColor="#333" />
            <EditText
                android:id="@+id/edt_conf_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:inputType="textPassword"
                android:background="@drawable/editbg"
                android:textSize="16sp"
                android:drawableRight="@drawable/ic_lock"
                android:drawableTint="@color/purple_500"
                android:hint="Confirm Password"
                android:maxLength="10"
                android:textColor="#333" />
            <EditText
                android:id="@+id/edt_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:inputType="text"
                android:textSize="16sp"
                android:background="@drawable/editbg"
                android:hint="Designation"
                android:textColor="#333" />
            <EditText
                android:id="@+id/edt_id_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:inputType="phone"
                android:textSize="16sp"
                android:background="@drawable/editbg"
                android:hint="Id No"
                android:textColor="#333" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Department"
                android:textSize="16sp"
                android:layout_marginTop="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edtbg">

                <Spinner
                    android:id="@+id/spinner_department"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="16sp"
                android:layout_marginTop="10dp"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/rd_group">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd_btn1"
                    android:checked="true"
                    android:text="Male"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/rd_btn2"
                    android:text="Female"/>
            </RadioGroup>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_register"
                android:text="Register"
                android:background="@drawable/loginbtn"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>